{
  "name": "foundrcheck",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev . --port=8788",
    "build": "next build",
    "pages:build": "next-on-pages",
    "preview": "pnpm pages:build && wrangler pages dev",
    "deploy": "pnpm pages:build && wrangler pages deploy",
    "migrate": "wrangler d1 execute $CF_D1_DB_NAME --file=./migrations/0001_init.sql",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^3.0.0",
    "lucia": "^3.2.0",
    "next": "^14.2.5",
    "oslo": "^1.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tslib": "^2.6.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.5",
    "@cloudflare/workers-types": "^4.20240529.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "playwright": "^1.46.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0",
    "wrangler": "^3.60.2"
  }
}
